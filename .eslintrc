{
  "extends": "airbnb",
  "plugins": [],
  "parser": "babel-eslint",
  "rules": {
    "comma-dangle": 0,
    "max-len": 0,
    "react/jsx-filename-extension": 0,
    "import/no-extraneous-dependencies": 0,
    "global-require": 0,
    "no-underscore-dangle": 0,
    "no-param-reassign": ["error", { "props": false }],
    "react/no-danger": 0,
    "no-console": ["error", {allow: ["error", "info"]}]
  },
  "globals": {
    "__DEV__": true,
    "__SERVER__": true,
    "__CLIENT__": true,
    "window": true,
    "document": true
  }
}
