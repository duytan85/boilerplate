{
  "name": "Boilerplate",
  "version": "1.0.0",
  "description": "NodeJS, Express, Isomorphic, React, React Router, Redux, Redux Saga, SASS, Jest, Webpack, Babel, ESLint, web application boilerplate",
  "main": "src/index.js",
  "repository": "https://github.com/duytan85/boilerplate",
  "author": "Duytan Hoang <duytanhoang85@gmail.com>",
  "license": "MIT",
  "scripts": {
    "---------- RUN ----------": "",
    "start": "better-npm-run start-prod",
    "start:dev": "concurrently \"better-npm-run start-dev-client\" \"better-npm-run start-dev-server\"",
    "start:server": "better-npm-run start-dev-server",
    "start:client": "better-npm-run start-dev-client",
    "---------- BUILD ----------": "",
    "build": "better-npm-run build-server && better-npm-run build-client",
    "build:server": "better-npm-run build-server",
    "build:client": "better-npm-run build-client",
    "---------- TEST ----------": "",
    "test": "jest --config jest.json",
    "test:dev": "jest --watch --config jest.json",
    "test:coverage": "jest --coverage --config jest.json",
    "test:updateSnapshot": "jest --updateSnapshot --config jest.json",
    "---------- LINT ----------": "",
    "lint": "yarn run lint:js",
    "lint:js": "eslint --ext .js --ext .jsx src config",
    "lint:fix": "eslint --ext .js --ext .jsx src config --fix"
  },
  "betterScripts": {
    "start-prod": {
      "command": "node dist/server.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start-dev-server": {
      "command": "nodemon src/index.js --watch src --exec babel-node",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "start-dev-client": {
      "command": "webpack-dev-server --config config/webpack/webpack.config.client.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build-server": {
      "command": "webpack --colors --display-error-details -p --config config/webpack/webpack.config.server.js"
    },
    "build-client": {
      "command": "webpack --colors --display-error-details -p --config config/webpack/webpack.config.client.js"
    }
  },
  "dependencies": {
    "axios": "^0.18.0",
    "better-npm-run": "^0.1.0",
    "express": "^4.16.3",
    "express-ping": "^1.4.0",
    "history": "^4.7.2",
    "http-proxy-middleware": "^0.18.0",
    "nconf": "^0.10.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.9",
    "redux": "^3.7.2",
    "redux-saga": "^0.16.0",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "concurrently": "^3.5.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^22.4.3",
    "lodash.clonedeep": "^4.5.0",
    "nodemon": "^1.17.2",
    "webpack": "^4.4.1",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.1",
    "webpack-node-externals": "^1.7.2",
    "webpack-visualizer-plugin": "^0.1.11"
  }
}
